<dxlc:LayoutItem x:Class="CDP4CommonView.Items.IsMaximumInclusiveLayoutItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d"
             Label="Maximum inclusive:">
    <dxe:CheckEdit Name="IsMaximumInclusive" 
                    IsChecked="{Binding Path=IsMaximumInclusive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    IsReadOnly="{Binding IsReadOnly}"/>
</dxlc:LayoutItem>
