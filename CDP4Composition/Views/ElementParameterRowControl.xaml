<UserControl x:Class="CDP4Composition.Views.ElementParameterRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:converters="clr-namespace:CDP4Composition.Converters"
             Name="ElementParameters"
             d:DesignHeight="300"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:NotConverter x:Key="NotConverter"></converters:NotConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,30,10,10" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Content="Owner: "></Label>
                <Label Content="{Binding Owner}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Content="Category: "></Label>
                <Label Content="{Binding Category}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Content="Model Code: "></Label>
                <Label Content="{Binding ModelCode}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Content="Description: "></Label>
                <Label Content="{Binding Description}"></Label>
            </StackPanel>
        </StackPanel>
        <dxg:GridControl Grid.Row="1" AutoGenerateColumns="None"
                         EnableSmartColumnsGeneration="False" 
                         ItemsSource="{Binding Parameters}">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Name" Fixed="Left" AllowEditing="False"/>
                <dxg:GridColumn FieldName="ShortName" Fixed="Left" AllowEditing="False"/>
                <dxg:GridColumn FieldName="Value" AllowEditing="False"/>
                <dxg:GridColumn FieldName="OwnerShortName" Header="Owner" AllowEditing="False"/>
                <dxg:GridColumn FieldName="Switch" AllowEditing="False"/>
                <dxg:GridColumn FieldName="Description" AllowEditing="False" Visible="False"/>
                <dxg:GridColumn FieldName="ModelCode" Header="Model Code" AllowEditing="False" />
                <dxg:GridColumn FieldName="RowType" Header="Row Type" AllowEditing="False"/>
            </dxg:GridControl.Columns>
        </dxg:GridControl>
    </Grid>
</UserControl>    